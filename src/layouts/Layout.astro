---
import '@/styles/global.css'
import IconsSprite from '../assets/icons.tsx'
import Main from "./Main.astro";
import CommonHead from '@/components/CommonHead.astro';


const { lang, lan } = Astro.props
---



<!doctype html>
<html lang={lang}>
	<CommonHead/>
	<body class="bg-light-bg dark:bg-dark-bg">
		<IconsSprite/>
		<Main {lan}>
			<slot />
		</Main>
	</body>
</html>

<style is:global>
	.hide-scrollbar::-webkit-scrollbar {
		display: none;
	}
	.hide-scrollbar {
		-ms-overflow-style: none;
		scrollbar-width: none;
	}
	
	section {
		width: 100%;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-display);
	}
</style>

<style>
	html,body {
		width: 100%;
		height:100%;
		margin:0
	}
	body {
		font-family: var(--font-body);
		overflow:hidden;
	}
</style>
