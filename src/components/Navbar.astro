---
import ThemeSwitch from '@/components/ThemeSwitch.tsx'
import LanSwitch from '@/components/LanSwitch.tsx'
import Hamburger from '@/components/Hamburger.tsx'
import Logo from '@/components/Logo.tsx'

const { lang } = Astro.params
const { lan } = Astro.props
---

<header class="absolute w-full lg:col-start-2 top-0 flex justify-center items-center bg-light-bg/50 dark:bg-dark-bg/30 md:bg-transparent z-50">
    <nav class="flex items-center justify-between lg:justify-end w-full p-3 bg-transparent">
        <Hamburger client:only/>
        <div class="flex items-center gap-2 shrink-0 sm:hidden">
            <Logo/>
            <a href={`/${lang}`} class="text-xl font-display font-semibold">
                Nahuel Lopez
            </a>
        </div>
        <div class="flex items-center gap-2">
            <LanSwitch client:only />
            <ThemeSwitch client:only >{lan.nav.button}</ThemeSwitch>
        </div>
    </nav>
</div>